{{> header}}
<div class="col-12">
    <div class="m-2">
        <div class="loginbox">
            {{#if failed}}
            <div class="alert alert-danger d-flex align-items-center mt-3" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </svg>
                <div>Username and password do not match!</div>
            </div>
            {{/if}}
            <div class="loginborder">
                <div class="logintitletext">
                    Log In
                </div>
                <form name="read-user" action="/read-user" method="post" >
                    <div class="mx-auto">
                        <div class="logintext" >Username:</div>
                        <input name="user" class="form-control me-2 customboxinput w-100" type="text" placeholder="Username" aria-label="Username" required>
                        <div class="logintext">Password: </div>
                        <input name="pass" class="form-control me-2 customboxinput w-100" type="password" placeholder="Password" aria-label="Password" required>
                    </div>
                    
                    <button id="log-in" class="btn btn-outline-light w-100 customloginbutton" type="submit">Log In</button>
                </form>
            </div>
        </div>
    </div>
</div>