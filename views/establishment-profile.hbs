{{> header}}
<div class="container overflow-hidden">
    <div class="row gx-5 justify-content-center pt-5">
        {{#each establishment-data}}
        <div class="col-3" style="min-width: 300px;">
            <div class="p-3 border bg-white rounded mb-5">
                <img class="img-responsive rounded-2 mx-auto d-block mt-2 restosquare-big" src="{{estPhoto}}" alt="profile-photo"><br>
                <p class="fw-bold fs-4">{{name}}</p>
                <span class="text-muted">{{recommendedPercent}}% Recommend this place</span>
                <p class="mt-3" style="font-weight: 600;">{{location}}</p>
                <p class="mt-3">{{description}} </p>
                {{#if ../login}}
                <a class="btn btn-outline-secondary w-100" type="button" id="write-review" href="/write-review/{{_id}}">Write Review</a>
                {{/if}}
            </div>
        </div>
        {{/each}}
        <div class="col-8">
            <div class="m-2">
                <p class="fw-bold fs-1">Reviews</p>

                {{> review-list}}

                <div class="container-fluid  p-0" >

                    {{#each establishment-data}}
                    {{#if ../hasPrev}}
                    <a type="button" class="btn btn-success mb-5" href="/restaurant/{{name}}{{../prevNum}}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-caret-left-fill" viewBox="0 0 16 16">
                        <path d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z"/>
                        </svg>
                        Previous
                    </a>
                    {{/if}}
                    {{#if ../hasNext}}
                    
                    <a type="button" class="btn btn-success float-end mb-5" href="/restaurant/{{name}}/{{../nextNum}}">
                        Next
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
                        <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
                        </svg>
                    </a>
                    
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>